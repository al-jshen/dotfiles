{
  "python.pythonPath": "/opt/homebrew/Caskroom/miniconda/base/envs/main/bin/python",
  "python.linting.ruffEnabled": true,
  "python.linting.mypyEnabled": false,
  "python.linting.mypyPath": "/opt/homebrew/Caskroom/miniconda/base/envs/main/bin/mypy",
  "python.linting.flake8Enabled": false,
  "python.linting.flake8Args": ["--max-line-length=88", "--disable=E203"],
  "python.linting.flake8Path": "/opt/homebrew/Caskroom/miniconda/base/envs/main/bin/flake8",
  "python.linting.pylintEnabled": false,
  "python.linting.pylintArgs": [
    "--ignored-classes=astropy.units",
    "--disable=C0330,C0411,C0114",
    "--jobs=0"
  ],
  "python.formatting.provider": "ruff",
  "python.formatting.blackPath": "/opt/homebrew/Caskroom/miniconda/base/envs/main/bin/black",
  "pyright.inlayHints.variableTypes": true,
  "pyright.inlayHints.functionReturnTypes": true,
  "pyright.completion.importSupport": true,
  "pyright.organizeimports.provider": "ruff",
  "julia.enabled": false,
  "julia.executablePath": "/opt/homebrew/bin/julia",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "cuda"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".git/",
        ".hg/",
        ".vim/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "extraArgs": ["-std=c++17"]
        }
      }
    }
  },

  "codeLens.enable": true,
  "inlayHint.enableParameter": true,

  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.updates.prompt": false,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.inlayHints.reborrowHints.enable": "always",
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.autoreload": true,

  "html.autoClosingTags": true,

  "prettier.trailingComma": "all",

  "tabnine.priority": 80,

  "suggest.languageSourcePriority": 100,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.detailField": "preview",
  "suggest.localityBonus": false,
  "suggest.triggerCompletionWait": 50,
  "suggest.timeout": 5000,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.snippetIndicator": " [S]",

  "snippet.highlight": true,
  "snippet.statusText": "SNIP",
  "snippets.priority": 90,
  "snippets.loadVSCodeProjectSnippets": true,

  "diagnostic.messageTarget": "float",
  "diagnostic.messageDelay": 10,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " Â» ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableSign": true,
  "diagnostic.enableHighlightLineNumber": true,

  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.formatOnSave": true,
  "[*]": {
    "coc.preferences.bracketEnterImprove": true,
    "coc.preferences.formatOnSave": true,
    "coc.preferences.enableLinkedEditing": true,
    "colors.enable": true,
    "inlayHint.enable": true
  },

  "signature.target": "float",

  "npm.binPath": "/opt/homebrew/bin/npm",
  "coc.source.vimtex.filetypes": ["tex", "plaintex"],
  "snippets.ultisnips.pythonPrompt": false
}
