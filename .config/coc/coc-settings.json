{
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=88", "--disable=E203"],
  "python.linting.pylintEnabled": false,
  "python.linting.pylintArgs": [
    "--ignored-classes=astropy.units",
    "--disable=C0330,C0411,C0114",
    "--jobs=0"
  ],
  "python.formatting.provider": "black",
  "python.venvPath": "/home/js/.cache/pypoetry/virtualenvs",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp", "cuda"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".git/",
        ".hg/",
        ".vim/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "extraArgs": ["-std=c++17"]
        }
      }
    }
  },

  "codeLens.enable": false,

  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.updates.prompt": false,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.inlayHints.refreshOnInsertMode": true,
  "rust-analyzer.checkOnSave.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.cargo.autoreload": true,

  "html.autoClosingTags": true,

  "prettier.formatterPriority": 1,
  "prettier.trailingComma": "all",

  "tabnine.priority": 80,

  "suggest.languageSourcePriority": 100,
  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.floatEnable": true,
  "suggest.detailField": "preview",
  "suggest.localityBonus": false,
  "suggest.triggerCompletionWait": 50,
  "suggest.timeout": 5000,
  "suggest.acceptSuggestionOnCommitCharacter": true,

  "diagnostic.messageTarget": "float",
  "diagnostic.messageDelay": 10,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " Â» ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableSign": true,
  "diagnostic.enableHighlightLineNumber": true,

  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "*",
    "python",
    "cpp",
    "rust",
    "sh",
    "bash",
    "c",
    "r"
  ],

  "signature.target": "float",

  "npm.binPath": "/home/js/.nvm/versions/node/v16.4.2/bin/npm",
  "coc.source.vimtex.filetypes": ["tex", "plaintex"]
}
