; Separator in between workspaces
; label-separator = |

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
label-underline = ${colors.aurora3}

[module/spotify]
type = custom/script
interval = 3
exec = if playerctl metadata 2>&1 | rg -q 'player'; then echo " "; else echo %{u#1db954}%{+u}%{F#1db954}%{F-} " " $(playerctl metadata --player=spotify --format "{{ artist }} - {{ title }}")%{-u};fi
label = %output%
click-left = playerctl previous
click-right = playerctl next

[module/usage_cpu]
type = internal/cpu
interval = 2
;format-prefix = "  "
;format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aurora1}
label = %percentage:2%%

[module/usage_memory]
type = internal/memory
interval = 2
; format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.aurora3
label = %percentage_used%%

[module/usage_gpu]
type = custom/script
interval = 2
; exec = nvidia-smi --format=csv,noheader,nounits --query-gpu="utilization.gpu"
exec = used=$(nvidia-smi --query-gpu="memory.used" --format=noheader,csv,nounits) && total=$(nvidia-smi --query-gpu="memory.total" --format=noheader,csv,nounits) && echo "scale=2; $used / $total * 100" |bc |cut -d "." -f 1
format-underline = ${colors.aurora4}
label = %output%%

[module/wlan]
type = internal/network
interface = enp34s0
interval = 3
accumulate-stats = true

format-connected-prefix = "  "
format-connected = <label-connected>
format-connected-underline = ${colors.aurora5}
label-connected = %local_ip%

format-disconnected = "Not connected."
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%A %b %d %Y"

time = "%l:%M %p"

; format-prefix = "   "
format-suffix = "   "

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
