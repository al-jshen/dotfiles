; format-prefix = "  "
format-volume = <label-volume> <bar-volume>
label-volume = vol %percentage%%

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = true
bar-volume-indicator =
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/temperature_cpu]
type = custom/script
interval = 1
exec = sensors |rg die |cut -d ' ' -f 10 |cut -c2-
format = <label>
format-underline = ${colors.aurora1}
label = %output%

[module/sound]
type = custom/script
interval = 1
; exec = if amixer get Master | tail -n1 | awk '{print $6}' | cut -d '[' -f2 |cut -d ']' -f1 | grep -q 'on'; then echo vol: $(amixer get Master | tail -n1 | awk '{print $4}' | cut -d '[' -f2 | cut -d ']' -f1); else echo "%{F#666}muted%{F-}"; fi
; exec = if pactl list sinks |rg RUNNING -A20 |rg Mute |rg -q no; then echo vol: $(pactl list sinks |rg RUNNING -A20 |rg "^\s+Volume" |cut -f6 -d " "); else echo "%{F#666}muted%{F-}"; fi
exec = if pactl get-default-sink |rg -q "bluez_output"; then echo : $(pactl get-sink-volume @DEFAULT_SINK@ |cut -d' ' -f6) %{F#4C6EF5}%{F-}; elif pactl list sinks |rg "Description: Starship" -A5 |rg Mute |rg -q no; then echo : $(pamixer --sink alsa_output.pci-0000_28_00.4.analog-stereo --get-volume)%; else echo "%{F#666}muted%{F-}"; fi;
format-underline = ${colors.aurora4}
format = <label>
label = %output%

[module/mic_toggle]
type = custom/script

; exec = if amixer get Capture |tail -n1 |awk '{print $7}' |cut -d '[' -f2 |cut -d ']' -f1 | grep -q 'on'; then echo "%{B#2e3440}%{u#5e81ac}%{+u}mic on%{-u B-}"; else echo "%{F#666}mic off%{F-}"; fi
; exec = if pactl list sources |rg alsa_input.usb-Burr-Brown_from_TI_USB_Audio_CODEC-00.analog-stereo -A20 |rg -q "Mute: no"; then echo "%{B#2e3440}%{u#5e81ac}%{+u}mic on%{-u B-}"; else echo "%{F#666}mic off%{F-}"; fi
exec = if pactl list sources |rg -q jack_in; then if pactl list sources |rg jack_in -A20 |rg -q "Mute: no"; then echo "%{B#2e3440}%{u#5e81ac}%{+u}mic on%{-u B-}"; else echo "%{F#666}mic off%{F-}"; fi; elif pactl list sources |rg alsa_input.usb-Burr-Brown_from_TI_USB_Audio_CODEC-00.analog-stereo -A20 |rg -q "Mute: no"; then echo "%{B#2e3440}%{u#5e81ac}%{+u}%{F#BF616A}   on %{-u B- F-}"; else echo "%{F#666}   off %{F-}"; fi
interval = 1
click-left = amixer set Capture toggle

format = <label>
label = %output%

[module/temperature_gpu]
type = custom/script

;exec = nvidia-smi -q -d TEMPERATURE |grep -e "GPU Current Temp" |awk '{ print $5}'
exec = nvidia-smi --format=csv,noheader --query-gpu="temperature.gpu"
tail = false
interval = 1

format = <label>
format-underline = ${colors.aurora4}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %output%°C
label-warn = %output%°C
label-warn-foreground = ${colors.secondary}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

