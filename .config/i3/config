# gaps
# gaps inner 20
# gaps horizontal 10
# gaps bottom 20
# gaps top 40
gaps top 35

# script to toggle gaps and borders
bindsym Mod1+Shift+g exec /home/js/.config/i3/toggle_gaps.sh

# borders
default_border pixel 2

# screenshot
bindsym Mod1+Shift+s exec maim -s --hidecursor ~/screenshots/$(date "+%Y-%m-%d.%H-%M-%S").png -b 0

# programs
bindsym Mod1+d exec rofi -show drun -modi run -show-icons -lines 10 -eh 2 -font "Noto Sans 16" -theme /home/js/.config/rofi/config.rasi
bindsym Mod1+q exec google-chrome-stable

# keyboard shortcuts
bindcode 49 exec playerctl --player=spotify play-pause
bindcode 112 exec notion-app
# bindcode 119 exec amixer set Capture toggle
bindcode 119 exec pactl set-source-mute alsa_input.usb-Burr-Brown_from_TI_USB_Audio_CODEC-00.analog-stereo-input toggle
bindcode 117 exec maim ~/screenshots/$(date "+%Y-%m-%d.%H-%M-%S").png -b 0

