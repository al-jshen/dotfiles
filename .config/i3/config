client.unfocused        $polar2         $polar2    $snow1    $polar2   $polar2

# startup programs
exec_always feh --bg-scale /home/js/.config/wallpapers/ocean.jpg
# exec_always pacwall -ug
exec_always --no-startup-id /home/js/.config/polybar/launch.sh
exec xrdb .Xresources
